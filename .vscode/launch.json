{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: dbchatpro Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/DBChatPro/DBChatPro.csproj",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "https?://localhost:\\d+",
                "uriFormat": "https://localhost:7235"
            }
        },
        {
            "name": "Launch Browser Only",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "cmd.exe",
            "args": ["/C", "start", "https://localhost:7235"],
            "cwd": "${workspaceFolder}"
        }
    ]
}